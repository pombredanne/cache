#!/bin/bash

set -euxo pipefail

cd "$(dirname "$0")/.."

echo ["$(date "+%H:%M:%S")"] "==> Started atâ€¦"

rm -f .index/**/nuget
time go run ./cmd/spandx/main.go nuget

if git status | grep 'nothing to commit'; then
  echo 'Nothing to commit'
else
  git add -A .index
  git commit -m 'Update Nuget index'
  git fetch origin
  git rebase origin/main
  git push origin main
fi
